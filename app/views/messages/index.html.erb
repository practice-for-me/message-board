<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>

<h4>メッセージ入力</h4>
  
<%= form_for(@message) do |f| %>
<div class="container">
  <div class="col-sm-4">
    名前:<%=f.text_area :name ,:class => "form-control"%>
  </div>
  <div class="col-sm-4">
    内容:<%= f.text_area :body,:class => "form-control" %>
  </div>
  <div class="col-sm-4">送信<br>
    <%= f.submit class: "btn btn-sm btn-primary pull-left"%>
  </div>
</div>
<% end %>
</div>
