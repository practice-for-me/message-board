<h1>メッセージ一覧</h1>
<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>

<%= form_for(@message) do |f| %>
  <div class="container">
    <div class="col-sm-4">
      名前:<%= f.text_area :name %>
    </div>
    <div class="col-sm-4">
      内容:<%= f.text_area :body %>
    </div>
    <div class="col-sm-4">
      <%= f.submit class: "btn btn-sm btn-primary" %>
    </div>
  </div>
<% end %>